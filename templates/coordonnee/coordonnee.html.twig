{% extends 'base.html.twig' %}

{% block title 'Coordonnées' %}


{% block body %}
    <div class="container top-space">
    <!-- container -->
    <div class="container top-space">
        <ol class="breadcrumb">
            <li>
            <a href="{{ path ('home')}}">Accueil</a>
            </li>
            <li class="active">
            Coordonnées
            </li>
        </ol>
    </div>

        <!-- Progressbar -->
        <div class="progress">
            <div class="circle active">
            <span class="label">1</span>
            </div>

            <span class="bar"></span>
            <div class="circle">
            <span class="label">2</span>
            </div>

            <span class="bar"></span>
            <div class="circle ">
            <span class="label">3</span>
            </div>

            <span class="bar"></span>
            <div class="circle">
            <span class="label">4</span>
            </div>
        </div>
        <!-- /Progressbar -->


    <!-- Article main content -->
    <article class="col-xs-12 maincontent">

        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3 class="thin text-center">Coordonnées</h3>

                    <hr>
                    {{ form_start(form) }}
                            <div class="form-check form-check-inline">
                                <label> Civilité : <span class="text-danger" required>*</span></label>
                                {{ form_widget(form.civilite) }}
                            </div>



                            <div class="top-margin">
                                <label> Nom : <span class="text-danger" required>*</span></label>
                                {{ form_widget(form.nom) }}
                            </div>

                            <div class="top-margin">
                                <label> Prénom : <span class="text-danger" required>*</span></label>
                                {{ form_widget(form.prenom) }}
                            </div>

                            <div class="top-margin">
                                <label> Date de naissance : <span class="text-danger" required>*</span></label>
                                {{ form_widget(form.date) }}
                            </div>

                            <div class="top-margin">
                                <label> Numéro et Voie : <span class="text-danger" required>*</span></label>
                                {{ form_widget(form.numeroVoie) }}
                            </div>

                            <div class="top-margin">
                                <label> Complément d'adresse : <span class="text-danger" required>*</span></label>
                                {{ form_widget(form.complementAdresse) }}
                            </div>

                            <div class="top-margin">
                                <label> Code Postal : <span class="text-danger" >*</span></label>
                                {{ form_widget(form.codePostal) }}
                            </div>

                            <div class="top-margin">
                                <label>Ville <span class="text-danger" required>*</span></label>
                               {{ form_widget(form.ville) }}

                            </div>

                            <hr>
                            {{ form_end(form) }}

                            <div class="row">
                                <div class="col-lg-12 text-right">
                                    <a class="btn btn-action" type="Submit" href="{{ path('vehicule') }}">Suivant</a>
                                </div>
                            </div>
                </div>
            </div>
        </div>
    </article>
    <!-- /Article -->

</div>
</div>
</div>	<!-- /container -->


{% endblock %}

